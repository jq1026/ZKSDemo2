<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration  
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-config.dtd">  
      
<configuration>  
    <!-- 全局别名设置，在映射文件中只需写别名，而不必写出整个类路径  -->  
    <typeAliases>    
         <typeAlias type="com.zks.model.User" alias="User"/>  
         <typeAlias type="com.zks.model.Area" alias="Area"/>
         <typeAlias type="com.zks.model.Role" alias="Role"/>
    </typeAliases>     
      <mappers>  
        <mapper resource="com/zks/mapping/UserMapper.xml" />  
        <mapper resource="com/zks/mapping/AreaMapper.xml" />
        <mapper resource="com/zks/mapping/RoleMapper.xml" />
    </mappers>
</configuration> 